{
    "version": 2,
    "builds": [
      {
        "src": "functions/api/**/*.ts",
        "use": "@vercel/node"
      },
      {
        "src": "vite.config.ts",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/functions/api/$1"
      }
    ]
  }
  